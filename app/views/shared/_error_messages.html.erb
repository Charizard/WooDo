<% if @user.errors.any? %>
    <div class="error-explanation">
        <div class="alert alert-error">
            This form contains <%= pluralize(@user.errors.count, "error") %>
        </div>
        <ul>
            <% @user.errors.full_messages.each do |e| %>
                <li><%= e %></li>
            <% end %>
        </ul>
    </div>
<% end %>
