<% if object.errors.any? %>
    <div class="error-explanation">
        <div class="alert alert-error">
            This form contains <%= pluralize(object.errors.count, "error") %>
        </div>
        <ul>
            <% object.errors.full_messages.each do |e| %>
                <li><%= e %></li>
            <% end %>
        </ul>
    </div>
<% end %>
