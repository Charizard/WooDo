$('#show-error').html("");
<% if !flash.now[:error].nil? %>
	$('#show-error').html(" <%= escape_javascript( render 'shared/flash_messages' ) %> ");
<% end %>
lists_collection.reset(<%= current_user.lists.to_json(:include => :tasks ).html_safe %>);
$('.list-body #tasks').sortable({
		stop: function(event, ui) {
  	ui.item.trigger('drop', ui.item.index());
	}
});
$('.list-body #tasks').disableSelection();